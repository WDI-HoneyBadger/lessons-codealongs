<p id="notice"><%= notice %></p>

<h1>Cups</h1>

<table>
  <thead>
    <tr>
      <th>Color</th>
      <th>Capacity</th>
      <th>Material</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cups.each do |cup| %>
      <tr>
        <td><%= cup.color %></td>
        <td><%= cup.capacity %></td>
        <td><%= cup.material %></td>
        <td><%= link_to 'Show', cup %></td>
        <td><%= link_to 'Edit', edit_cup_path(cup) %></td>
        <td><%= link_to 'Destroy', cup, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Cup', new_cup_path %>
